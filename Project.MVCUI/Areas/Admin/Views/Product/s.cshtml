@model ProductAdminVM
@{
    ViewBag.Title = "ProductList";
}

<h2>@Html.ActionLink("Ürün Ekle", "AddProduc", "Product", null, new { @class = "btn btn-primary" })</h2>

 


 


<div class="row">
    <div class="col-sm-12">
        <section class="panel">


            <span class="tools pull-right">
                <a href="javascript:;" class="fa fa-chevron-down"></a>
                <a href="javascript:;" class="fa fa-times"></a>
            </span>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered" id="hidden-table-info">
                        <thead>
                            <tr>
                                <th>Urun ID</th>
                                <th>Urun ismi</th>
                                <th class="hidden-phone">Urun Fiyati</th>
                                <th class="hidden-phone">Urun Kategori ID</th>
                                <th class="hidden-phone">Sil</th>
                                <th class="hidden-phone">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model.Products)
                            {


                                <tr class="gradeX">
                                    <td>@item.ID</td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td class="hidden-phone">
                                        @item.UnitPrice
                                    </td>
                                    @if (item.Category == null)
                                    {
                                        <td>Category Belirtilmemiş</td>
                                    }
                                    else
                                    {

                                        <td>@item.Category.CategoryName</td>
                                    }
                                    <td class="hidden-phone">
                                        <img width="30"  height="30" title="@item.ProductName" src="@item.ImagePath"/>
                                    </td>
                                    <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                                    <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" }) </td>
                                </tr>







                            }















</table>

                </div>
            </div>
        </section>
 

        <script src="~/Areas/Admin/AdminScripts/AdminCategoryDTJ.js"></script>






