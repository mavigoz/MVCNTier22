
 

@model ProductAdminVM
@{
    ViewBag.Title = "AddProduct";
}
@using (Html.BeginForm("AddProduct","Product",Formatmet))
{<div class="row">

        <div class="col-sm-12">
            <section class="panel">

                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2">Ürün  İsmi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form form-control", placeholder = "Kategori ismi" })


                        </div>



                    </div>  <br /><br />
                    <div class="form-group">

                        <label class="col-sm-2">Urun Fiyati</label>
                        <div class="col-sm-10"> @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form form-control", placeholder = "Açıklama Giriniz" })   </div>

                    </div>

                    <div class="form-group">

                        <label class="col-sm-2">Urun Stok</label>
                        <div class="col-sm-10"> @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form form-control", placeholder = "Açıklama Giriniz" })   </div>

                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2">Kategori ismi</label>
                        <label class="col-sm-10"><button class="btn btn-primary">EKLE</button></label>

                    </div>








</section>







        </div>




    </div>


}


