


@model ProductAdminVM
@{
    ViewBag.Title = "AddProduct";
}
<script src="~/OutherTools/lithbox/lightbox-2.6.min.js"></script>
<link href="~/OutherTools/lithbox/lightbox.css" rel="stylesheet" />
@*Eğer backend dosya göndereceksek ek parametre kullanmamız gerekiyor anoni tipte new{encypte="multipart/form-data" şeklinde} *@
@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{<div class="row">

        <div class="col-sm-12">
            <section class="panel">

                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2">Ürün  İsmi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form form-control", placeholder = "Kategori ismi" })

                            <br />
                        </div>



                    </div>
                    <div class="form-group">

                        <label class="col-sm-2">Urun Fiyati</label>
                        <div class="col-sm-10"> @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form form-control", placeholder = "Açıklama Giriniz" })   <br />  </div>

                    </div>

                    <div class="form-group">

                        <label class="col-sm-2">Urun Stok</label>
                        <div class="col-sm-10"> @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form form-control", placeholder = "Açıklama Giriniz" })  <br />   </div>
                        <br />
                    </div>

                    <div class="form-group">

                        <label class="col-sm-2">Kategori İsmi  </label>

                        <div class="col-sm-10"> @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "lütfen Seçiniz", new { @class = "form form-control" }) <br />   </div>

                    </div>
                    <br />
                    <div class="form-group">

                        <label class="col-sm-2">Resim Seç</label>
                        <div class="col-sm-10">
                            <input type="file" name="image" class="form form-contol" />
                            @Html.TextBox("fileName", null, new { @class = "form form-control", placeholder = "Resim Giriniz" })

                            <br />    <br />    <br />
                        </div>

                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2">Ürün</label>
                        <label class="col-sm-10"><button class="btn btn-primary">EKLE</button></label>

                    </div>








            </section>







        </div>




    </div>


}


