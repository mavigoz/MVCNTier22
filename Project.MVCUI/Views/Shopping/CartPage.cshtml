@model CartPageVM
@{
    ViewBag.Title = "CartPage";
}

<div class="jumbotron">

    <h2>   ödmeniz Gereken Toplam  Tutar=@Model.Cart.TotalPrice .. Siparişi Onaylamak için Lütfen    @Html.ActionLink("Tıklayınız", "SiparisOnayla")</h2>
</div> 

 <div class="row product-list">
     @foreach (CartItem item in Model.CartItems)
     {

         <div class="col-md-4">
             <section class="panel">
                 <div class="pro-img-box">
                     @if (item.ImagePath == null || item.ImagePath == "3")
                     {
                         <img src="~/OutherTools/flatlab-master/img/product-list/pro-1.jpg" alt="Resim Yok" width="100" height="300" title="@item.Name" />
                     }
                     else
                     {

                         <img src="@item.ImagePath" width="100" height="300" title="@item.Name" />


                     }




                     <a href="@Url.Action("DeleteFromCart", new {id=item.ID})" class="adtocart">
                         <i class=" glyphicon  glyphicon-remove "></i>
                     </a>
                 </div>

                 <div class="panel-body text-center">
                     <h4>
                         <a href="product_list.html#" class="pro-title" title="@item.Name">
                             @item.Name * @item.Amount
                         </a>
                     </h4>
                     <p class="price">$@item.SubTotal</p>
                 </div>
             </section>
         </div>
     }
     <br /> 
 </div>