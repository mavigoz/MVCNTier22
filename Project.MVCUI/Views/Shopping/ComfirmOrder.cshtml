

@model OrderVM
@{
    ViewBag.Title = "ComfirmOrder";
}

<h2>ComfirmOrder</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">


            <label class="col-sm-2 control-label"> Gönderim Adresi</label>

            <div class="col-sm-10"> @Html.TextAreaFor(x => x.Order.SheepAddress, new { @class = "form form-control" })</div>


        </div>
        <div class="form-group">


            <label class="col-sm-2 control-label">Email</label>

            <div class="col-sm-10"> @Html.TextAreaFor(x => x.Order.Email, new { @class = "form form-control" })</div>


        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"> Kart Numarası </label>

            <div class="col-sm-10"> @Html.TextAreaFor(x => x.PaymentDTO.CardNumber, new { @class = "form form-control" }) </div>
        </div>

        <div class="form-group">

            <label class="col-sm-2">Kart Güvenlik Numarası</label>
            <div class="col-sm-10">@Html.TextAreaFor(x => x.PaymentDTO.SecurityNumber, new { @class = "form form-control" }) </div>

        </div>
        <div class="form-group">

            <label class="col-sm-2">Geçerlilik süresi Yıl</label>
            <div class="col-sm-10">@Html.TextAreaFor(x => x.PaymentDTO.CardExpiryYear, new { @class = "form form-control" }) </div>

        </div>
        <div class="form-group">

            <label class="col-sm-2">Geçerlilik süresi Ay</label>
            <div class="col-sm-10">@Html.TextAreaFor(x => x.PaymentDTO.CardExpiryMonth, new { @class = "form form-control" }) </div>

        </div>
        <div class="form-group">

            <label class="col-sm-2">Kart İsmi</label>
            <div class="col-sm-10">@Html.TextAreaFor(x => x.PaymentDTO.CardUserName, new { @class = "form form-control" }) </div>







        </div>
        <div class="form-group">
            <label class="col-sm-2">Oylamak için Tıklayınız</label>
            <div class="col-sm-10">  <button class="btn btn-primary">Onay</button> </div>



        </div>
    }


</div>


