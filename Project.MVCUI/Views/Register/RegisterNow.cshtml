@model AppUserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" />
    <meta name="outhor" content"Emre" />
  
    <meta name="description" content="" />
    <title>RegisterNow</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/OutherTools/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/OutherTools/assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/OutherTools/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/OutherTools/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/OutherTools/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/OutherTools/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/OutherTools/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/OutherTools/assets/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
  
</head>
<body class="bx-log-in">
    <div class="container">
    
        <h2>@ViewBag.ZatenVar</h2>

        @using (Html.BeginForm("RegisterNow","Register",FormMethod.Post,new {@class="form-signin"}))
        {

        <br /><center><h2>Uye Olunuz</h2></center>

        <div class="bx-log-in-circle">
          
            @Html.TextAreaFor(x => x.AppUser.UserName, new {@class="form form-control", placeholder = "Kullanıcı ismi" })
            @Html.PasswordFor(x => x.AppUser.Password, new {@class="form form-control", placeholder = "Password Giriniz" })
            @Html.TextBoxFor(x => x.AppUser.Email, new {@class="form form-control", placeholder = "Email giriniz" })


            <br />
            Profil bilgileri<br />
            @Html.TextBoxFor(x => x.Profile.FirstName, new  {@class="form form-control", placeholder = "isim Giriniz" })
        @Html.TextBoxFor(x => x.Profile.LastName, new { @class = "form form-control", placeholder = "Soyad Giriniz" })

            <br />
            <button class=" btn btn-primary">Uye ol</button>
       <div>
           @Html.ActionLink("Giriş Yap", "Index","Home")

       </div>
        </div> 
        
        
        }



    </div>
</body>
</html>
